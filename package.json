{
  "name": "@solid-soda/scripts",
  "version": "2.3.2",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "license": "MIT",
  "main": "config.json",
  "files": [
    "config.json",
    "*/index.js",
    "*/config/*",
    "*/utils/*",
    "bin/*",
    "utils/*"
  ],
  "bin": "./bin/solid-scripts.js",
  "repository": "git@github.com:solid-soda/scripts.git",
  "scripts": {
    "prepare": "echo 'Already prepared'",
    "lint:code": "yarn eslint \"./**/*.{js,jsx}\"",
    "pretty": "yarn prettier --write .",
    "commit": "yarn git-cz",
    "release": "yarn standard-version"
  },
  "preferUnplugged": true,
  "dependencies": {
    "chalk": "^4.0.0",
    "cross-spawn": "^7.0.2",
    "inquirer": "^7.1.0",
    "lodash": "^4.17.15",
    "mrm-core": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "standard-version": "^7.1.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "yarn commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
